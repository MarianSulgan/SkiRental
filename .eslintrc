{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
 "parserOptions": {
    "ecmaFeatures": {
        "classes": true,
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
      "no-const-assign": 1,
      "no-extra-semi": 0,
      "semi": 0,
      "no-fallthrough": 0,
      "no-empty": 0,
      "no-mixed-spaces-and-tabs": 0,
      "no-redeclare": 0,
      "no-this-before-super": 1,
      "no-undef": 1,
      "no-unreachable": 1,
      "no-unused-vars": 1,
      "no-use-before-define": 0,
      "constructor-super": 1,
      "curly": 0,
      "eqeqeq": 0,
      "func-names": 0,
      "valid-typeof": 1,
      "comma-dangle": 0,
      "indent": [1, 4],
      "max-len": [1, 200],
      "arrow-body-style": 0,
      "react/jsx-indent": [1, 4],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "linebreak-style": 0
  }
}
